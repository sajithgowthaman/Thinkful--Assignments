        "chatbot = ChatBot('Dialogs')\n",
        "# this is to remove the accumulated knowledge base\n",
        "chatbot.storage.drop()\n",
        "\n",
        "# create a new trainer for the chatbot\n",
        "trainer = ListTrainer(chatbot)\n",
        "\n",
        "# train the chatbot\n",
        "trainer.train(dialog_sents)"
